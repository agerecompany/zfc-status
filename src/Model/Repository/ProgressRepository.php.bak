<?php
namespace Popov\ZfcStatus\Model\Repository;

use Doctrine\ORM\Query\ResultSetMapping;
use Doctrine\ORM\Query\ResultSetMappingBuilder;
use Magere\Popov\ORM\EntityRepository;

class ProgressRepository extends EntityRepository {

    protected $_alias = 'statusProgress';

    public function getItemProgress($item, $module) {
        return $this->getItemsProgress([$item], [$module]);
    }

    public function getItemsProgress($items, $modules) {
        $u = 'user';
        $s = 'status';

        $qb = $this->createQueryBuilder($this->_alias)
            ->leftJoin($this->_alias . '.status', $s)
            ->leftJoin($this->_alias . '.user', $u);

        $qb->where(
			$qb->expr()->andX(
                $qb->expr()->in($this->_alias . '.module', '?1'),
                $qb->expr()->in($this->_alias . '.itemId', '?2')
			)
		);

        $qb->setParameters([1 => $modules, 2 => $items]);

        //$query = $qb->getQuery();
        //\Zend\Debug\Debug::dump([$query->getSql(), $query->getParameters()]); die(__METHOD__);

        return $qb;
    }

}